.side-bar
  .side-header
    .header-block
      %p.header-block__username
        = current_user.name
      %ul.header-block__menu
        %li.header-block__menu__new-group
          =link_to new_group_path do
            = icon('fas', 'edit')
        %li.header-block__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message